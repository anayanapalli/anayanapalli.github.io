---
import { Rss } from "lucide-react"
import { ThemeToggle } from "~/components/react/theme-toggle"
import { common } from "~/config"

const config = common
---

<header class="flex h-24 w-full items-center justify-between px-4 md:px-0">
  <!-- Site title / logo -->
  <a href="/" aria-label={config.siteName}>
    <div class="text-2xl font-semibold">{config.siteName}</div>
  </a>

  <!-- Social + RSS + Theme toggle -->
  <div class="flex items-center gap-6">
    {
      config.rss && (
        <a
          href="/rss.xml"
          target="_blank"
          aria-label="RSS"
          title="RSS"
          class="text-2xl transition-colors duration-200 hover:text-blue-600"
        >
          <Rss />
        </a>
      )
    }

    {
      config.social.map((social) => (
        <a
          href={social.link}
          target="_blank"
          class="hidden text-2xl transition-colors duration-200 hover:text-blue-600 md:block"
          aria-label={social.label}
          title={social.label}
        >
          <social.icon />
        </a>
      ))
    }

    <ThemeToggle client:load />
  </div>
</header>

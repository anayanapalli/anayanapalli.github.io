---
const currentYear = new Date().getFullYear()
---

<footer class="flex flex-wrap items-center gap-1 py-10">
  <p>&copy; {currentYear}</p>

  {
    [
      {
        text: "Designed by",
        link: "https://www.linkedin.com/in/anayanapalli/",
        label: "Anish Nayanapalli",
      },
    ].map((item, index) => (
      <>
        {index > 0 && <p class="mx-1">|</p>}
        <p>{item.text}</p>
        <a
          href={item.link}
          class="text-blue-600 underline decoration-transparent decoration-2 underline-offset-4 transition-colors duration-200 hover:decoration-blue-600"
          target="_blank"
        >
          {item.label}
        </a>
      </>
    ))
  }
</footer>

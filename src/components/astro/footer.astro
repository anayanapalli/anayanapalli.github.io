---
const currentYear = new Date().getFullYear()
---

<footer class="flex flex-wrap items-center gap-1 py-10">
  <p>&copy; {currentYear}</p>

  {
    [
      {
        text: "Designed by",
        link: "/about",
        label: "Anish Nayanapalli",
      },
    ].map((item, index) => (
      <>
        {index > 0 && <p class="mx-1">|</p>}
        <p>{item.text}</p>
        <a
          href={item.link}
          class="text-red-700 underline underline-offset-4 dark:text-red-300"
        >
          {item.label}
        </a>
      </>
    ))
  }
</footer>

---
import { en } from "~/config"

const { custom } = en.navigation as {
  custom?: { label: string; link: string }[]
}
---

<div
  class="mt-4 mb-10 flex gap-4 overflow-x-auto text-lg whitespace-nowrap [-ms-overflow-style:none] [scrollbar-width:none] [&::-webkit-scrollbar]:hidden"
>
  <a
    href="/"
    class="hover:underline hover:underline-offset-4"
    aria-label="Home"
    title="Home"
  >
    <p>Home</p>
  </a>

  <a
    href="/archive"
    class="hover:underline hover:underline-offset-4"
    aria-label="Archive"
    title="Archive"
  >
    <p>Archive</p>
  </a>

  {
    custom?.map((tab) => (
      <a
        href={tab.link}
        class="hover:underline hover:underline-offset-4"
        target="_blank"
        aria-label={tab.label}
        title={tab.label}
      >
        <p>{tab.label}</p>
      </a>
    ))
  }

  <a
    href="/links"
    class="hover:underline hover:underline-offset-4"
    aria-label="Links"
    title="Links"
  >
    <p>Links</p>
  </a>

  <a
    href="/about"
    class="hover:underline hover:underline-offset-4"
    aria-label="About"
    title="About"
  >
    <p>About</p>
  </a>
</div>

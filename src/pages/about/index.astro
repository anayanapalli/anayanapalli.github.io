---
import { common } from "~/config"
import AboutContentEn from "~/config/mdx/about.mdx"
import MainLayout from "~/layouts/main.astro"

// Always English-only
const AboutContent = AboutContentEn

// Safe fallback for pageMeta
const pageMeta = common.pageMeta?.about ?? {
  title: "About Me",
  description: "Here is a self-introduction",
  ogImage: "/images/page-meta/en/about.png",
}
---

<MainLayout
  title={pageMeta.title}
  description={pageMeta.description}
  ogImage={pageMeta.ogImage}
  needComment={true}
>
  <div class="prose dark:prose-invert prose-img:my-0 max-w-3xl">
    <AboutContent />
  </div>
</MainLayout>
